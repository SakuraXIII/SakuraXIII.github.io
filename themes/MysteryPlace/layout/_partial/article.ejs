<article
  id="<%= post.layout %>-<%= post.slug %>"
  class="show article article-type-<%= post.layout %>">
  <div class="article-inner light">
    <%- partial('post/gallery') %> <% if (post.link || post.title){ %>
    <div class="article-header light">
      <%- partial('post/title', {class_name: 'article-title light'}) %>
      <div class="article-subtitle light">
        <%- partial('post/date', {class_name: 'article-date iconfont iconshijian', date_format:
        'YYYY年MM月DD日'}) %>
        <p>字数：<span><%- strip_html(post.content).length %></span>字</p>
        <%- partial('post/category', {class_name: 'article-category iconfont iconbiaoqian'}) %>
      </div>
    </div>
    <% } %>
    <div class="article-entry" itemprop="articleBody">
      <% if (post.excerpt && index) { %> <%- post.excerpt %> <% } else { %> <%- post.content %> <% }
      %>
    </div>
    <footer class="article-footer">
      <% if (post.comments && config.disqus_shortname){ %>
      <a href="<%- post.permalink %>#disqus_thread" class="article-comment-link"
        ><%= __('comment') %></a
      >
      <% } %>
      <%- partial('post/tag') %>
    </footer>
  </div>
  <% if (!index){ %> <%- partial('post/nav') %> <% } %>
</article>

<% if (!index && post.comments && config.disqus_shortname){ %>
<section id="comments">
  <div id="disqus_thread">
    <noscript
      >Please enable JavaScript to view the
      <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript
    >
  </div>
</section>
<% } %>
